{
	"Init": {
		"prefix": "xini",
		"body": [
			"this.m${1/(.)(.*)/${1:/upcase}$2/} = $2.default(p${1/(.)(.*)/${1:/upcase}$2/});"
		]
	},

	"ArrayInit": {
		"prefix": "xarrini",
		"body": [
			"this.m${1/(.)(.*)/${1:/upcase}$2/} = Array.default(p${1/(.)(.*)/${1:/upcase}$2/});"
		]
	},

	"BooleanInit": {
		"prefix": "xbooini",
		"body": [
			"this.m${1/(.)(.*)/${1:/upcase}$2/} = Boolean.default(p${1/(.)(.*)/${1:/upcase}$2/});"
		]
	},

	"NumberInit": {
		"prefix": "xnumini",
		"body": [
			"this.m${1/(.)(.*)/${1:/upcase}$2/} = Number.default(p${1/(.)(.*)/${1:/upcase}$2/});"
		]
	},

	"ObjectInit": {
		"prefix": "xobjini",
		"body": [
			"this.m${1/(.)(.*)/${1:/upcase}$2/} = Object.default(p${1/(.)(.*)/${1:/upcase}$2/});"
		]
	},

	"StringInit": {
		"prefix": "xstrini",
		"body": [
			"this.m${1/(.)(.*)/${1:/upcase}$2/} = String.default(p${1/(.)(.*)/${1:/upcase}$2/});"
		]
	},

	"Property": {
		"prefix": "xpro",
		"body": [
			"get $1() { return this.m${1/(.)(.*)/${1:/upcase}$2/}; }",
			"set $1(pValue) { this.m${1/(.)(.*)/${1:/upcase}$2/} = pValue; }"
		]
	},
	
	"GetProperty": {
		"prefix": "xgetpro",
		"body": [
			"get $1() { return this.m${1/(.)(.*)/${1:/upcase}$2/}; }"
		]
	},

	"StaticProperty": {
		"prefix": "xstapro",
		"body": [
			"static get $1() { return $2; }"			
		]
	},

	"Class": {
		"prefix": "xcla",
		"body": [
			"/**",
			" * @module \"$1\" class",
			" * @description $2",
			" * @version 0.0.1 ($CURRENT_YEAR-$CURRENT_MONTH-$CURRENT_DATE)",
			" */",
			"",
			"include(\"/general/javaScript\");",
			"",
			"class $1 {",
			"    constructor() {",
			"    }",
			"}",
			"",
			"module.exports = $1;"
		]
	},

	"Include": {
		"prefix": "xinc",
		"body": [
			"const ${1/(.)(.*)/${1:/upcase}$2/} = include(\"/$1\");"
		]
	},

	"IncludeDefinition": {
		"prefix": "xincdef",
		"body": [
			"global.__rootDir = __dirname;",
			"global.__srcDir = `${__rootDir}/src`;",
			"module.exports = (global.include = (lPath) => { return require(`${global.__srcDir}/${lPath}`); })"
		]
	},

	"JavaScript": {
		"prefix": "xjavscr",
		"body": [
			"include(\"/general/javaScript\");"
		]
	},

	"Module": {
		"prefix": "xmod",
		"body": [
			"/**",
			" * @module \"$1\" class",
			" * @description $2",
			" * @version 0.0.1 ($CURRENT_YEAR-$CURRENT_MONTH-$CURRENT_DATE)",
			" */"
		]
	}
}